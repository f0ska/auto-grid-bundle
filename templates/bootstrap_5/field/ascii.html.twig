{% set value = agFieldValue(entity, field) %}
{% if (value is null or value is same as '') %}
    -
{% elseif (action is same as 'grid') %}
    {{ value|convert_encoding('ASCII', 'UTF-8')|agTruncate(field.view.grid_truncate) }}
{% else %}
    {{ value|convert_encoding('ASCII', 'UTF-8') }}
{% endif %}
