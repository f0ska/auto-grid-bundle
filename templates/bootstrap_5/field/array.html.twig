{% set value = agFieldValue(entity, field) %}
{% if (value is null or value is empty) %}
    -
{% elseif (action is same as 'grid') %}
    {{ value|join(', ')|agTruncate(field.view.grid_truncate) }}
{% else %}
    <ul>
        {% for item in value %}
            <li>{{ item }}</li>
        {% endfor %}
    </ul>
{% endif %}
